from datetime import datetime

class Quadra:
    def __init__(self, id, nome, localizacao, tipo_esporte, descricao):
        self.id = id
        self.nome = nome
        self.localizacao = localizacao
        self.tipo_esporte = tipo_esporte
        self.descricao = descricao
        self.disponibilidade = {}  # Map<Date, Boolean>

    def adicionar_quadra(self, nome, localizacao, tipo_esporte, descricao):
        pass

    def editar_quadra(self, id, nome, localizacao, tipo_esporte, descricao):
        self.nome = nome
        self.localizacao = localizacao
        self.tipo_esporte = tipo_esporte
        self.descricao = descricao

    def excluir_quadra(self, id):
        pass

    def ver_detalhes(self):
        return {
            'nome': self.nome,
            'localizacao': self.localizacao,
            'tipo_esporte': self.tipo_esporte,
            'descricao': self.descricao,
            'disponibilidade': self.disponibilidade
        }